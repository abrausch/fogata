<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <%= f.input :locale, collection: I18n.available_locales %>
    <%= f.input :timezone, as: :time_zone %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
