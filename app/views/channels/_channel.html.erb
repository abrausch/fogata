<div class="channel">
  <h2>
    <%= link_to channel.name, channel %>
    <span class="actions">
      <%= link_to t('views.scaffold.edit'), edit_channel_path(channel), class: 'important' %>
      <%=t 'views.common.or' %>
      <%= link_to t('views.scaffold.destroy'), channel, confirm: t('views.scaffold.are_you_sure'), method: :delete, class: 'important' %>
    </span>
  </h2>
  <% if channel.current_topic.present? %>
    <div>
      <strong><%=t 'activerecord.attributes.channel.current_topic' %>: </strong> <%= messageize(channel.current_topic).html_safe unless channel.current_topic.nil? %>
    </div>
  <% end %>
</div>
