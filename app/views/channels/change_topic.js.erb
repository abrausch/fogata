<%= publish_to @channel.pub_sub_name do %>
  $("#messages").append("<%=j render(partial: 'messages/message', object: @channel.messages.last) %>");
  hideChangeTopicForm();
  $("#channel_current_topic #topic").html("<%=j emojize(@channel.current_topic).html_safe unless @channel.current_topic.nil? %>");
  scrollToLastMessage();
  <% if @channel.current_topic.present? %>
    $("#change_topic a").html("<%=t 'views.channels.show.change_topic' %>");
    $("#change_topic a").removeClass('important');
  <% else %>
    $("#change_topic a").html("<%=t 'views.channels.show.add_a_topic' %>");
    $("#change_topic a").addClass('important');
  <% end %>
<% end %>
